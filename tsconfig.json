{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "lib": [
      "ScriptHost",
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Promise"
    ],
    "noImplicitThis": true
  },
  "exclude": ["./legacy/**/*"]
}
